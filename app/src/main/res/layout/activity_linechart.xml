<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/chart1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/muscount" />

    <TextView
        android:id="@+id/musstate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_margin="8dp"
        android:layout_toLeftOf="@+id/musstatetext"
        android:layout_marginRight="5dp"
        android:text="운동 상태 :  "
        android:paddingBottom="12dp" />

    <TextView
        android:id="@+id/muscount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/musstate"
        android:layout_margin="8dp"
        android:layout_marginBottom="35dp"
        android:layout_toLeftOf="@+id/muscounttext"
        android:layout_marginRight="5dp"
        android:text="운동 횟수 : "
        android:paddingBottom="12dp" />

    <TextView
        android:id="@+id/muscounttext"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:layout_alignBottom="@+id/muscount"
        android:layout_alignParentRight="true"
        android:text="@string/dash"
        android:layout_marginBottom="15dp"
        android:layout_marginRight="10dp"
        android:gravity="right"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/musstatetext"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/musstate"
        android:layout_alignParentRight="true"
        android:text="@string/dash"
        android:layout_margin="8dp"
        android:layout_marginBottom="15dp"
        android:layout_marginRight="10dp"
        android:gravity="right"
        android:textAppearance="?android:attr/textAppearanceMedium" />

</RelativeLayout>
